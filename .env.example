# Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=domains
DATABASE_URL=postgresql://user:password@db:5432/domains

# API Configuration
API_BASE_URL=http://api:5000
GRPC_SERVER_ADDRESS=grpc-server:50051

# Application Configuration
APP_ENV=production
LOG_LEVEL=info
# APP_ENV options: development, production
# LOG_LEVEL options: debug, info, warning, error, critical
# For verbose logging: APP_ENV=development and LOG_LEVEL=debug
# For quiet mode: APP_ENV=production (errors only)

# File storage
UPLOAD_FOLDER=/app/files
METADATA_FILE=/app/files/metadata.json


